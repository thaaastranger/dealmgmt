  "breadcrumb": {
    "link": {
      "$type": "color",
      "$value": "{grey.black}",
      "$description": "Breadcrumb link text color"
    },
    "linkHover": {
      "$type": "color",
      "$value": "{grey.grey-70}",
      "$description": "Breadcrumb link hover color"
    },
    "current": {
      "$type": "color",
      "$value": "{grey.black}",
      "$description": "Breadcrumb current page text color"
    },
    "separator": {
      "$type": "color",
      "$value": "{grey.black}",
      "$description": "Breadcrumb separator icon color"
    },
    "gap": {
      "$type": "dimension",
      "$value": "6px",
      "$description": "Gap between breadcrumb items"
    }
  },
  "navigation": {
    "itemActive": {
      "$type": "color",
      "$value": "{grey.black}",
      "$description": "Navigation active item text color"
    },
    "itemInactive": {
      "$type": "color",
      "$value": "rgba(0, 0, 0, 0.56)",
      "$description": "Navigation inactive item text color"
    },
    "iconActive": {
      "$type": "color",
      "$value": "{grey.black}",
      "$description": "Navigation active item icon color"
    },
    "iconInactive": {
      "$type": "color",
      "$value": "{grey.black}",
      "$description": "Navigation inactive item icon color"
    },
    "borderActive": {
      "$type": "color",
      "$value": "{grey.black}",
      "$description": "Navigation active item bottom border color"
    },
    "borderContainer": {
      "$type": "color",
      "$value": "rgba(0, 0, 0, 0.08)",
      "$description": "Navigation container bottom border color"
    },
    "gap": {
      "$type": "dimension",
      "$value": "16px",
      "$description": "Gap between navigation items"
    },
    "itemGap": {
      "$type": "dimension",
      "$value": "6px",
      "$description": "Gap between icon and text within navigation item"
