      "$description": "Assignee role color"
    },
    "nameOpacity": {
      "$type": "number",
      "$value": 0.75,
      "$description": "Assignee name opacity"
    },
    "roleOpacity": {
      "$type": "number",
      "$value": 0.4,
      "$description": "Assignee role opacity"
    },
    "itemGap": {
      "$type": "dimension",
      "$value": "8px",
