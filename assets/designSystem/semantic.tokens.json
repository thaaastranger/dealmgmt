{
  "button": {
    "fill": {
      "background": {
        "$type": "color",
        "$value": "{grey.black}",
        "$description": "Fill button background color"
      },
      "backgroundHover": {
        "$type": "color",
        "$value": "rgba(0, 0, 0, 1)",
        "$description": "Fill button background on hover (with 20% white overlay)"
      },
      "backgroundPressed": {
        "$type": "color",
        "$value": "rgba(0, 0, 0, 1)",
        "$description": "Fill button background when pressed (with 30% white overlay)"
      },
      "backgroundDisabled": {
        "$type": "color",
        "$value": "{grey.grey-20}",
        "$description": "Fill button background when disabled"
      },
      "content": {
        "$type": "color",
        "$value": "{grey.white}",
        "$description": "Fill button text and icon color"
      },
      "contentDisabled": {
        "$type": "color",
        "$value": "{grey.grey-50}",
        "$description": "Fill button text and icon color when disabled"
      }
    },
    "outline": {
      "border": {
        "$type": "color",
        "$value": "{grey.black}",
        "$description": "Outline button border color"
      },
      "borderSecondary": {
        "$type": "color",
        "$value": "{grey.grey-50}",
        "$description": "Outline button border color in default state"
      },
      "borderDisabled": {
        "$type": "color",
        "$value": "{grey.grey-40}",
        "$description": "Outline button border color when disabled"
      },
      "content": {
        "$type": "color",
        "$value": "{grey.black}",
        "$description": "Outline button text and icon color"
      },
      "contentDisabled": {
        "$type": "color",
        "$value": "{grey.grey-50}",
        "$description": "Outline button text and icon color when disabled"
      },
      "backgroundHover": {
        "$type": "color",
        "$value": "rgba(0, 0, 0, 0.04)",
        "$description": "Outline button background on hover"
      },
      "backgroundPressed": {
        "$type": "color",
        "$value": "rgba(0, 0, 0, 0.08)",
        "$description": "Outline button background when pressed"
      }
    },
    "textOnly": {
      "content": {
        "$type": "color",
        "$value": "{grey.black}",
        "$description": "Text-only button text and icon color"
      },
      "contentDisabled": {
        "$type": "color",
        "$value": "{grey.grey-50}",
        "$description": "Text-only button text and icon color when disabled"
      },
      "backgroundHover": {
        "$type": "color",
        "$value": "rgba(0, 0, 0, 0.04)",
